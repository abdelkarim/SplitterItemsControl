<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:primitives="clr-namespace:Lib.Primitives"
                    xmlns:lib="clr-namespace:Lib">
    <Style TargetType="{x:Type lib:SplitterItemsControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type lib:SplitterItemsControl}">
                    <primitives:SplitterItemsPanel IsItemsHost="True"
                                                   Orientation="{TemplateBinding Orientation}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>